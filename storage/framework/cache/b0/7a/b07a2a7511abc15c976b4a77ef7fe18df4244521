        var parent = $('#refuse');

        var validation = 1;

        parent.find('input,select').each(function(){

            if($(this).is(':hidden')){

                return;

            }

            if($(this).valid() == false){

                validation = 0;

            }

        });

        if(validation){

            $('#refuse').modal('toggle');

            KTApp.blockPage({

                overlayColor: '#000000',

                type: 'v2',

                state: 'success',

                message: '{{"Please wait"|__}}...'

            });

        }

    });

    

